<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:epv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qgstudio.anywork.widget.ExamPagerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/epv"
        epv:sTitleCenterTextString=""
        epv:sTitleCenterTextColor="@color/dark_green_text"
        epv:sTitleBackgroundColor="@color/dark_grey_status"
        epv:sTitleRightIconResId="@drawable/ic_quit"
        epv:sLeftBottomTextColor="@color/dark_green_text"
        epv:sLeftBottomTextString="上一题"
        epv:sRightBottomBackgroundColor="@color/dark_grey_status"
        epv:sRightBottomTextColor="@color/dark_green_text"
        epv:sRightBottomTextString="下一题"
        epv:sLeftBottomBackgroundColor="@color/dark_grey_status"
    />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:src="@mipmap/ic_send"/>

</FrameLayout>
